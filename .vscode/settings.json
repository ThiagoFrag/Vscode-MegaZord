{
    // ============================================================
    // MEGAZORD CODE - CONFIGURACAO SUPREMA
    // THE HAND OF GOD - Semantic Translation Engine
    // ============================================================

    // PYTHON - Interpretador e Ambiente
    "python.defaultInterpreterPath": "C:\\Users\\th\\AppData\\Local\\Programs\\Python\\Python312\\python.exe",
    "python.terminal.activateEnvironment": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,

    // EDITOR - Configuracao Principal
    "editor.fontSize": 14,
    "editor.fontFamily": "'Cascadia Code', 'Fira Code', Consolas, monospace",
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.6,
    "editor.letterSpacing": 0.5,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 80,
    "editor.renderWhitespace": "selection",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": true,
    "editor.linkedEditing": true,
    "editor.stickyScroll.enabled": true,
    "editor.inlayHints.enabled": "on",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.suggest.preview": true,
    "editor.suggest.showMethods": true,
    "editor.suggest.showFunctions": true,
    "editor.suggest.showKeywords": true,

    // ARQUIVOS - Associacoes e Encoding
    "files.associations": {
        "*.json": "json",
        "*.txt": "plaintext",
        "*.bat": "bat",
        "*.ts": "typescript"
    },
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.git": false,
        "**/work_*.txt": false
    },

    // TERMINAL - Configuracao Avancada
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "'Cascadia Code', Consolas, monospace",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.enableBell": false,
    "terminal.integrated.copyOnSelection": true,

    // WORKBENCH - Interface Visual
    "workbench.startupEditor": "none",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.enablePreview": false,
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorCustomizations": {
        "activityBar.background": "#0d0d0d",
        "activityBar.foreground": "#00ff88",
        "activityBar.activeBorder": "#00ff88",
        "titleBar.activeBackground": "#0a0a0a",
        "titleBar.activeForeground": "#00ff88",
        "titleBar.inactiveBackground": "#050505",
        "sideBar.background": "#0a0a0a",
        "sideBar.foreground": "#cccccc",
        "sideBarTitle.foreground": "#00ff88",
        "editor.background": "#0d0d0d",
        "editor.foreground": "#e0e0e0",
        "editor.lineHighlightBackground": "#1a1a1a",
        "editor.selectionBackground": "#00ff8833",
        "editorCursor.foreground": "#00ff88",
        "editorLineNumber.foreground": "#555555",
        "editorLineNumber.activeForeground": "#00ff88",
        "terminal.background": "#0a0a0a",
        "terminal.foreground": "#00ff88",
        "statusBar.background": "#0a0a0a",
        "statusBar.foreground": "#00ff88",
        "statusBar.debuggingBackground": "#ff0055",
        "tab.activeBackground": "#1a1a1a",
        "tab.activeForeground": "#00ff88",
        "tab.inactiveBackground": "#0a0a0a",
        "tab.inactiveForeground": "#666666",
        "tab.activeBorder": "#00ff88",
        "list.activeSelectionBackground": "#00ff8833",
        "list.activeSelectionForeground": "#00ff88",
        "list.hoverBackground": "#1a1a1a",
        "button.background": "#00ff88",
        "button.foreground": "#000000",
        "badge.background": "#00ff88",
        "badge.foreground": "#000000",
        "panel.background": "#0a0a0a",
        "panelTitle.activeForeground": "#00ff88",
        "panelTitle.activeBorder": "#00ff88"
    },
    "workbench.iconTheme": "vs-seti",

    // LINGUAGENS ESPECIFICAS
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.rulers": [80, 120],
        "editor.defaultFormatter": "ms-python.python"
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[bat]": {
        "editor.tabSize": 4
    },

    // EXPLORER - Navegacao de Arquivos
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "type",
    "explorer.compactFolders": false,

    // GIT - Controle de Versao
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.decorations.enabled": true,

    // SEARCH - Configuracao de Busca
    "search.exclude": {
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/work_*.txt": true
    },
    "search.useIgnoreFiles": true,

    // DEBUG - Depuracao
    "debug.console.fontSize": 13,
    "debug.console.fontFamily": "'Cascadia Code', Consolas, monospace",
    "debug.inlineValues": "on",

    // TELEMETRY - Desativado
    "telemetry.telemetryLevel": "off",

    // ============================================================
    // MCP SERVER - MEGAZORD REAL-TIME TRANSLATION
    // ============================================================
    "chat.mcp.enabled": true,
    "github.copilot.chat.codeGeneration.useInstructionFiles": true
}
