{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LEVIATHAN: Modo Interativo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/core/translator.py",
            "console": "integratedTerminal",
            "args": ["interactive"],
            "justMyCode": true,
            "env": {
                "PYTHONIOENCODING": "utf-8"
            }
        },
        {
            "name": "LEVIATHAN: ENCODE",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/core/translator.py",
            "console": "integratedTerminal",
            "args": ["encode"],
            "justMyCode": true,
            "env": {
                "PYTHONIOENCODING": "utf-8"
            }
        },
        {
            "name": "LEVIATHAN: RESTORE",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/core/translator.py",
            "console": "integratedTerminal",
            "args": ["restore"],
            "justMyCode": true,
            "env": {
                "PYTHONIOENCODING": "utf-8"
            }
        },
        {
            "name": "LEVIATHAN: STATS",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/core/translator.py",
            "console": "integratedTerminal",
            "args": ["stats"],
            "justMyCode": true
        },
        {
            "name": "LEVIATHAN: VALIDATE",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/core/translator.py",
            "console": "integratedTerminal",
            "args": ["validate"],
            "justMyCode": true
        },
        {
            "name": "LEVIATHAN: PREVIEW",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/core/translator.py",
            "console": "integratedTerminal",
            "args": ["preview"],
            "justMyCode": true
        },
        {
            "name": "LEVIATHAN: Debug com Args Customizados",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/core/translator.py",
            "console": "integratedTerminal",
            "args": ["${input:customArgs}"],
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Python: Arquivo Atual",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "customArgs",
            "type": "pickString",
            "description": "Selecione a operacao:",
            "options": [
                "encode",
                "restore",
                "stats",
                "preview",
                "history",
                "undo",
                "validate",
                "interactive"
            ],
            "default": "encode"
        }
    ]
}

